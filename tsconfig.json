{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@components/*": ["components/*"],
      "@util/*": ["utilities/*"],
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@test/*": ["test/*"],
      "@views/*": ["views/*"],
      "@router/*": ["router/*"],
      "@layouts/*": ["layouts/*"],
      "@service/*": ["service/*"],
      "@store/*": ["store/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
